Sub ApplyIndexMatchFormula()

    Dim wsSource As Worksheet
    Dim wsTarget As Worksheet
    Dim i As Long
    Dim searchValue As String
    Dim matchRow As Variant
    Dim result As Variant
    
    ' Définir les feuilles de calcul source et cible
    Set wsSource = ThisWorkbook.Sheets("0DataValidation")
    Set wsTarget = ThisWorkbook.Sheets("0Source") ' Remplacez "0Source" si vous appliquez cela sur une autre feuille
    
    ' Boucle sur les lignes 4 à 181
    For i = 4 To 181
        
        ' Construire la valeur de recherche (valeur de la colonne B + "TRUE")
        searchValue = wsTarget.Cells(i, 2).Value & "TRUE" ' Colonne B correspond à la colonne 2
        
        ' Trouver la ligne correspondant à searchValue dans la colonne A de '0DataValidation'
        On Error Resume Next
        matchRow = Application.Match(searchValue, wsSource.Range("A:A"), 0)
        On Error GoTo 0
        
        ' Si une correspondance est trouvée, récupérer la valeur correspondante de la colonne F
        If Not IsError(matchRow) Then
            result = wsSource.Cells(matchRow, 6).Value ' Colonne F correspond à la colonne 6
        Else
            result = "Non trouvé"
        End If
        
        ' Stocker le résultat dans la colonne de votre choix, par exemple, la colonne G
        wsTarget.Cells(i, 7).Value = result ' Colonne G correspond à la colonne 7

    Next i

End Sub
